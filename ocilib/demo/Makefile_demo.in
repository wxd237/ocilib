INCS =  -I@OCILIB_PREFIX@/include
CFLAGS = -D@OCILIB_IMPORT@ -D@OCILIB_CHARSET@
LDFLAGS= @ORACLE_LIBADD@  -L@OCILIB_PREFIX@/lib -locilib
CC = @CC@
SRCS = ocilib_demo.c
OBJS = $(SRCS:.c=.o)

all: ocilib_demo

demo: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS)

.c.o:
	$(CC) $(INCS) $(CFLAGS) -c -o $@ $<

clean: 
	rm -f *~ $(OBJS)
